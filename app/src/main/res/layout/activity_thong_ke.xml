<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activiti_User.Activity_ThongKe">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actiThongKe_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/overpass_extrabold"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Thống kê"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actiMain_tv_titleTb"
            />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:background="@drawable/background_date_thongke"
            android:drawableLeft="@drawable/calender_23"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/actiThongKe_tv_checkIn"
            android:onClick="handleActionTvCheckIn"
            android:fontFamily="@font/overpass_semibold"
            android:text="20/10/2022" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/double_next_27"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/background_date_thongke"
            android:drawableTint="@null"
            android:drawableLeft="@drawable/calender_23"
            android:drawablePadding="10dp"
            android:id="@+id/actiThongKe_tv_checkOut"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="handleActionTvCheckOut"
            android:fontFamily="@font/overpass_semibold"
            android:text="20/10/2022" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="100dp"
        android:background="@drawable/background_layout_thongke"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/actiThongKe_linear_status"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/actiThongKe_img_statusThanhToan"
                android:background="@drawable/background_status_room_thanhtoan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã thanh toán"
                android:textColor="@color/black"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/background_status_room_huy" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bị Huỷ"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/actiThongKe_rc_category"
            app:layout_constraintTop_toBottomOf="@id/actiThongKe_linear_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>