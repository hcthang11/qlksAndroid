<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/background_dialog_dat_phong"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Chức Năng"
        android:textSize="25sp"
        android:padding="10dp"
        android:fontFamily="@font/arimo"
        android:textStyle="bold"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:drawableTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dat_truoc"
        android:gravity="left"
        android:id="@+id/dialogPDT_btn_checkIn"
        android:text="  Nhận phòng"
        android:drawableLeft="@drawable/checkint_27"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:fontFamily="@font/roboto" />
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:drawableTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dat_truoc"
        android:gravity="left"
        android:id="@+id/dialogPDT_btn_booked"
        android:text="  Đặt phòng"
        android:drawableLeft="@drawable/reserve_27"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:fontFamily="@font/roboto" />
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:drawableLeft="@drawable/list_27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogPDT_btn_schedule"
        android:text="  Lịch đặt trước"
        app:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="18sp"
        android:background="@drawable/btn_dat_truoc"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Xem chi tiết"
        android:id="@+id/dialogPDT_btn_detail"
        android:drawableLeft="@drawable/eye_27"
        app:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="18sp"
        android:background="@drawable/btn_dat_truoc"
        />
</LinearLayout>