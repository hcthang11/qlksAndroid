<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Update Nhân Viên"
        android:textColor="@color/coNguoi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Nhân Viên: "
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edNameNv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_custom"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại: "
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edSoDtNv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_custom"
            android:hint="Số Điện Thoại"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="CCCD: "
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edCCCDNv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_custom"
            android:hint="CCCD"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu: "
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edPassNv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_custom"
            android:hint="Mật Khẩu"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ: "
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edAddressNv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/border_custom"
                android:hint="Địa Chỉ"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gioi Tính: "
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cusstom_item_nhanvoen"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdo_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam" />

                <RadioButton
                    android:id="@+id/rdo_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Nữ" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLuuNv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:text="Update"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnCancleNv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/coNguoi"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:text="Hủy"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>