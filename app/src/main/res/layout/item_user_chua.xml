<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:background="@drawable/cusstom_item_nhanvoen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:id="@+id/itemUserChua_img_avatar"
            android:background="@drawable/background_old_user"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/businessman_100"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user"
                app:fontFamily="@font/overpass_bold"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Họ Tên :  Nguyễn Gia Minh"
                app:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#100423"
                />
            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/overpass_bold"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Giới tính :  nam"
                app:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#100423"
                />
            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/overpass_bold"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Số Điện Thoại :  0943253413"
                app:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#100423"
                />
            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/overpass_bold"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_cccd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="CMND/CCCD :  4534538394533"
                app:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#100423"
                />
            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/overpass_bold"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_bold"
                android:text="Địa chỉ :  du an 1"
                app:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="#100423"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</androidx.cardview.widget.CardView>