<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:padding="5dp"
    android:background="@null"
    android:layout_height="350dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:weightSum="10"
        android:padding="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_hoadon_thanhtoan"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/dialogAddService_spinner"
            android:background="@drawable/background_spinner"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:src="@drawable/add_30"
            android:background="@drawable/green_rippleblack_corner7"
            android:id="@+id/dialogAddService_btn_add"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_hoadon_thanhtoan"
        android:padding="5dp"
        android:id="@+id/dialogAddService_rc"
        android:layout_weight="8.3"/>
</androidx.appcompat.widget.LinearLayoutCompat>