<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="10dp"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/datTruoc"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemLoaiPhong_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overpass_semibold"
            android:textStyle="bold"
            android:text="Tên bài hát"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemLoaiPhong_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overpass_semibold"
            android:text="Giá Tiền :  100.000 đ"
            android:textColor="#3A3A3A"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemLoaiPhong_tv_amountOfPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overpass_semibold"
            android:text="Số Người Tối Đa :  7"
            android:textColor="#3A3A3A"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>