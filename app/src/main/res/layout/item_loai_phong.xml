<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@null">
    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_width="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:gravity="center"
                android:background="@color/white"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/itemLoaiPhong_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basic"
                    android:text="Tên bài hát"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá: "
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/quicksand"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemLoaiPhong_tv_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="3000 (vnd)"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số người: "
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/quicksand"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemLoaiPhong_tv_amountOfPeople"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="7"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="01"
        android:background="@drawable/strokeviolet_circle"
        android:textSize="37sp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:fontFamily="@font/basic"
        android:foregroundGravity="center"
        android:gravity="center"
        android:id="@+id/itemLoaiPhong_tv_id"
        />

</RelativeLayout>