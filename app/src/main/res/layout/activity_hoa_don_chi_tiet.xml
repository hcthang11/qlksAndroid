<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".HoaDonChiTietActivity"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/actiHDCT_tb"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back_25"
            android:onClick="handleActionBack"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/overpass_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Hoá Đơn Chi Tiết"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actiMain_tv_titleTb"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/actiHDCT_contrains_order"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/actiHDCT_tb"
        app:layout_constraintBottom_toBottomOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/actiHDCT_layout_thanhToan"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="5dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Thông tin khách hàng"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#0C4573"
                    android:fontFamily="@font/overpass_bold"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:hint="Họ Tên (*)"
                    android:textSize="14sp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nguyễn Văn A"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/name_30"
                        android:textSize="18sp"
                        android:fontFamily="@font/overpass_bold"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black"
                        android:id="@+id/actiHDCT_ed_fullName"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    android:hint="Giới Tính (*)"
                    android:textSize="14sp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nam"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/sex_30dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/overpass_bold"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black"
                        android:id="@+id/actiHDCT_ed_Sex"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="Số Điện Thoại (*)"
                    android:textSize="14sp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="093412343254"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/phone_30"
                        android:fontFamily="@font/overpass_bold"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black"
                        android:id="@+id/actiHDCT_ed_phoneNumber"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="CMND/CCCD (*)"
                    android:textSize="14sp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="98324012342143 "
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/identification_30"
                        android:fontFamily="@font/overpass_bold"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black"
                        android:id="@+id/actiHDCT_ed_CCCD"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_marginTop="3dp"
                    android:hint="Địa Chỉ (*)"
                    android:textSize="14sp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hà Nội"
                        android:drawableLeft="@drawable/address_30"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/overpass_bold"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black"
                        android:id="@+id/actiHDCT_ed_address"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="15dp"
                    android:text="Chi Tiết Đặt Phòng"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="#0C4573"
                    android:fontFamily="@font/overpass_bold"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/actiHDCT_Linear_orderDetail"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D5CBCB"
                    />
            </LinearLayout>
        </ScrollView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:id="@+id/actiHDCT_layout_thanhToan"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="8dp"
                android:background="@drawable/red7_borderblack12_corner8"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C4573"
                    android:textStyle="bold"
                    android:text="Tổng Tiền Dịch Vụ"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actiHDCT_tv_totalService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_bold"
                    android:text="3.900.000 đ"
                    android:textColor="#E6E80303"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0C4573"
                    android:textStyle="bold"
                    android:text="Tổng Tiền Phòng"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/actiHDCT_tv_totalService"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E6E80303"
                    android:layout_marginTop="10dp"
                    android:text="3.900.000 đ"
                    android:id="@+id/actiHDCT_tv_totalRoom"
                    android:fontFamily="@font/overpass_bold"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/actiHDCT_tv_totalService"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D5CBCB"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/overpass_bold"
                    android:text="Thành Tiền"
                    android:textColor="#0C4573"
                    android:textSize="23sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    app:layout_goneMarginTop="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="#E6E80303"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:text="3.900.000 đ"
                    android:id="@+id/actiHDCT_tv_total"
                    android:fontFamily="@font/overpass_bold"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center"
                android:layout_marginTop="5dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="6.3"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    android:hint="Tiền Khách Đưa"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    android:layout_marginEnd="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    android:layout_height="65dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/overpass_bold"
                        android:drawableLeft="@drawable/money_25"
                        android:inputType="numberDecimal"
                        android:id="@+id/actiHDCT_ed_moneyOfCustomer"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="3.7"
                    android:background="@drawable/btn_3"
                    android:drawableStart="@drawable/out_26"
                    android:fontFamily="@font/overpass_bold"
                    android:onClick="handleActionPay"
                    android:padding="10dp"
                    android:text="Xác Nhận"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="13"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Trả lại"
                    android:textColor="#0168BA"
                    android:textSize="17sp"
                    android:fontFamily="@font/overpass_bold"
                    android:textStyle="bold"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="0 đ"
                    android:id="@+id/actiHDCT_tv_changeMoney"
                    android:textColor="#0168BA"
                    android:textSize="17sp"
                    android:fontFamily="@font/overpass_bold"
                    android:textStyle="bold"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/actiHDCT_pg_load"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
